<div class="bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-8 sm:pb-0">
      <h1 class="text-3xl font-bold text-custom-black mb-8">VÃ¥ra varumÃ¤rken</h1>
  
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @brands.each do |brand| %>
          <div>
            <h2 class="text-xl font-semibold text-custom-black mb-4"><%= brand.name %></h2>
            
            <% if brand.logo.attached? %>
              <%= image_tag brand.logo, class: "w-32 h-32 object-contain mb-4" %>
            <% end %>
  
            <p class="text-sm text-light-grey mb-4"><%= truncate(brand.description, length: 100) %></p>
            <ul class="space-y-2">
              <% brand.listings.active.each do |listing| %>
                <li>
                  <%= link_to "#{listing.address.street}, #{listing.address.city}", listing_path(listing), class: "text-sm leading-6 text-custom-black hover:text-gray-900" %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= render 'shared/footer' %>