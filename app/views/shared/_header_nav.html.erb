<header class="bg-white" data-controller="nav">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Dweller</span>
        <%= image_tag 'dweller_logo.svg', alt: 'Dweller', class:'h-5 w-auto' %>
    </a>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-light-grey" data-action="click->nav#toggle">
        <span class="sr-only">Öppna menyn</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="#" class="text-sm font-semibold leading-6 text-custom-black">Kontorshjälpen</a>
      <a href="#" class="text-sm font-semibold leading-6 text-custom-black">Kontorskalkylatorn</a>
      <a href="#" class="text-sm font-semibold leading-6 text-custom-black">Alla kontor</a>
      <a href="#" class="text-sm font-semibold leading-6 text-custom-black">Guider och tips</a>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden hidden" data-nav-target="menu" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Dweller</span>
        <%= image_tag 'dweller_logo.svg', alt: 'Dweller', class:'h-5 w-auto' %>
        </a>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-light-grey" data-action="click->nav#toggle">
          <span class="sr-only">Stäng menyn</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
          <div class="space-y-2 py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-custom-black hover:bg-gray-50">Kontorshjälpen</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-custom-black hover:bg-gray-50">Kontorskalkylatorn</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-custom-black hover:bg-gray-50">Alla kontor</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-custom-black hover:bg-gray-50">Guider och tips</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>