<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= turbo_frame_tag "calculator_content" do %>
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 mt-16 justify-center">
    <div class="lg:col-span-4">
      <div class="sticky top-8">
        <div class="mb-4">
          <label class="block text-md font-medium leading-6 text-gray-900">Steg <%= @current_step %> av 8</label>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= @questions['headline'] %></h2>
        <p class="text-md text-gray-600"><%= @questions['description'] %></p>
      </div>
    </div>

    <div class="lg:col-span-8">
      <% if flash[:alert] %>
        <div class="alert alert-danger mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with model: @calculation, url: office_calculator_submit_path, method: :post, data: { 
        turbo_frame: "calculator_content", 
        controller: "office-calculator form-validation" 
      } do |form| %>
        <div class="border-gray-900/10">
          <% if @questions.present? %>
            <% @questions.each do |field, data| %>
              <div class="mb-6">
                <label class="block text-lg font-medium text-gray-700 mb-2"><%= data['question'] %></label>

                <% if field == 'contact_form' %>
                  <% data['fields'].each do |sub_field, sub_data| %>
                    <div class="mb-4">
                      <label class="block text-sm font-medium text-gray-700"><%= sub_data['name'] %></label>
                      <% case sub_data['input_type'] %>
                      <% when 'text', 'email', 'tel' %>
                        <%= form.text_field sub_field, 
                                            value: cached_data["calculator_#{@current_step}_contact_form_#{sub_field}"],
                                            required: sub_data['required'], 
                                            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                      <% when 'checkbox' %>
                        <div class="flex items-start mt-2">
                          <%= form.check_box sub_field, 
                                             checked: cached_data["calculator_#{@current_step}_contact_form_#{sub_field}"] == "1",
                                             required: sub_data['required'], 
                                             class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                          <%= form.label sub_field, sub_data['name'], class: "ml-2 block text-sm text-gray-900" %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                <% else %>
                  <% case data['input_type'] %>
                  <% when 'number' %>
                    <%= form.number_field "calculator_#{@current_step}_#{field}", 
                                          value: cached_data["calculator_#{@current_step}_#{field}"],
                                          placeholder: data['placeholder'], 
                                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <% when 'text' %>
                    <%= form.text_field "calculator_#{@current_step}_#{field}", 
                                        value: cached_data["calculator_#{@current_step}_#{field}"],
                                        placeholder: data['placeholder'], 
                                        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p>No questions available for this step.</p>
          <% end %>
        </div>

        <%= form.hidden_field :location_id, value: cached_data["calculator_location_id"] %>
        <%= form.hidden_field :current_step, value: @current_step %>
        <div class="mt-6 flex items-center justify-between">
          <%= link_to "GÃ¥ tillbaka", office_calculator_previous_step_path(step: @current_step - 1), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500", data: { turbo_frame: "calculator_content" } %>
          <%= form.submit "Skicka min rapport", class: "primary-button w-auto" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>