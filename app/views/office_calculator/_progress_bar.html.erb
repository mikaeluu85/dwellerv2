<nav class="flex items-center justify-center mb-6" aria-label="Progress">
  <p class="text-sm font-medium">Steg <%= current_step.to_i %> av 8</p>
  <ol role="list" class="ml-8 flex items-center space-x-5">
    <% (1..8).each do |step| %>
      <li>
        <% if step < current_step.to_i %>
          <!-- Completed Step -->
          <span class="block h-2.5 w-2.5 rounded-full bg-indigo-600"></span>
        <% elsif step == current_step.to_i %>
          <!-- Current Step -->
          <span class="relative flex items-center justify-center" aria-current="step">
            <span class="absolute flex h-5 w-5 p-px" aria-hidden="true">
              <span class="h-full w-full rounded-full bg-indigo-200"></span>
            </span>
            <span class="relative block h-2.5 w-2.5 rounded-full bg-indigo-600" aria-hidden="true"></span>
          </span>
        <% else %>
          <!-- Upcoming Step -->
          <span class="block h-2.5 w-2.5 rounded-full bg-gray-200"></span>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
