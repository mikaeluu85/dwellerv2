<%= turbo_frame_tag "calculator_content" do %>
<%= form_with url: office_calculator_next_step_path, method: :post do |form| %>
  <% @questions.each do |field, data| %>
    <div class="mb-6">
      <label class="block text-lg font-medium text-gray-700 mb-2"><%= data['question'] %></label>
      <p class="text-sm text-gray-500 mb-3"><%= data['description'] %></p>

      <% if data['options'].is_a?(Hash) %>
        <% data['options'].each do |option_key, option_data| %>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1"><%= option_data['name'] %></label>
            <% case option_data['input_type'] %>
            <% when 'number' %>
              <%= form.number_field "calculator_#{@current_step}_#{field}_#{option_key}", placeholder: "Antal", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
            <% when 'text' %>
              <%= form.text_field "calculator_#{@current_step}_#{field}_#{option_key}", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <% case data['input_type'] %>
        <% when 'number' %>
          <%= form.number_field "calculator_#{@current_step}_#{field}", placeholder: data['placeholder'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        <% when 'text' %>
          <%= form.text_field "calculator_#{@current_step}_#{field}", placeholder: data['placeholder'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= form.hidden_field :current_step, value: @current_step %>
  <div class="mt-4 flex justify-between items-center">
    <% if @current_step > 1 %>
      <%= link_to "Gå tillbaka", office_calculator_previous_step_path(step: @current_step - 1), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500", data: { turbo_frame: "calculator_content" } %>
    <% end %>
    <%= form.submit "Nästa", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
<% end %>